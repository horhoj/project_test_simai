{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src"
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.html",
    "**/*.scss",
    "**/*.css",
    "webpack.config.js",
    ".eslintrc.js"
  ]
}
